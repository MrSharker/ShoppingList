@model UpsertReceiptItem

<div class="modal-content">
    <div class="modal-header">
        <h4>Добавление информации о покупке</h4>
        <button type="button" class="btn-close" aria-label="Close" data-bs-dismiss="modal" area-hidden="true"></button>
    </div>
    <div class="modal-body">
        <form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <p>
                <label for="Category">Категория</label>
                <select name="Category">
                        @{
                            foreach (var cat in Enum.GetValues(typeof(Category)))
                            {
                                <option value=@cat>@(((Category)cat).GetDescription())</option>
                            }
                        }
                </select>
                </p>
            </div>
            <div>   
                <label asp-for="Count" class="control-label">Количество</label>
                <input type="number" asp-for="Count" class="form-control" />
            </div>
            <div>   
                <label asp-for="Price" class="control-label">Цена</label>
                <input type="text" asp-for="Price" class="input-number form-control" placeholder="0,00"/>
            </div>
            <div>   
                <label asp-for="BuyTime" class="control-label">Дата покупки</label>
                <input type="date" asp-for="BuyTime" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Отправить" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>